<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".trial.SensorActivity">


    <TextView
        android:id="@+id/accelerometer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Accelerometer"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/x_acceleration"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/x_acceleration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="X: 0"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/y_acceleration"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/y_acceleration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Y: 0"
        android:gravity="center"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/z_acceleration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Z: 0"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/y_acceleration"
        android:layout_marginTop="10dp"/>

</RelativeLayout>